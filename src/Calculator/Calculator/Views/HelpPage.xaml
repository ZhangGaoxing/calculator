<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Views.HelpPage"
             Title="帮助">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="HelpFile"
                  x:TypeArguments="x:String"
                  iOS="help.html"
                  Android="file:///android_asset/help.html" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid>
        <WebView Source="file:///android_asset/help.html" />
    </Grid>
    
</ContentPage>